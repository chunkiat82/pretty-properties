extends layout

block content  
  table(class='table table-hover table-bordered')
    thead
      tr
        th(style='width:10%')= 'Line'
        th(style='width:30%')= 'Key'
        th(style='width:60%')= 'Value'
    tbody
      each row, index in rows
        if row.existing
          tr
            th(scope='row')=index+1
            td= row.key
            td
              each diff, index in row.diff
                p= diff.value
              
        if row.added
          tr(class='table-success')
            th(scope='row')=index+1
            td= row.key
            td= row.value
        if row.removed
          tr(class='table-danger')
            th(scope='row')=index+1
            td= row.key
            td= row.value